@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@using System.Security.Claims
@using WebDienTu.Models
@using Microsoft.EntityFrameworkCore

@{
    var user = HttpContextAccessor.HttpContext.User;
    var isAuthenticated = user.Identity.IsAuthenticated;
    int userId = 0;
    string userName = null;

    if (isAuthenticated)
    {
        // Sửa claim đúng với AccountController
        var idClaim = user.FindFirstValue("UserId");
        int.TryParse(idClaim, out userId);
        userName = user.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Name)?.Value;
    }

    int gioHangCount = 0;
    if (userId > 0)
    {
        var _context = (DienTuStoreContext)HttpContextAccessor.HttpContext.RequestServices.GetService(typeof(DienTuStoreContext));
        gioHangCount = _context.GioHangTams
                               .Where(g => g.MaNguoiDung == userId)
                               .Sum(g => g.SoLuong);
    }
}

<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
    <div class="container-fluid">
        <a class="navbar-brand text-primary fw-bold" asp-controller="Home" asp-action="Index">WebĐiệnTử</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarUser" aria-controls="navbarUser" aria-expanded="false">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarUser">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Trang Chủ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="DonHang" asp-action="LichSu">Lịch sử</a>
                </li>
            </ul>

            <ul class="navbar-nav">
                @if (!isAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Login">
                            <i class="fa-solid fa-right-to-bracket me-1"></i> Đăng nhập
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Register">
                            <i class="fa-solid fa-user-plus me-1"></i> Đăng ký
                        </a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link position-relative" asp-controller="GioHang" asp-action="Index">
                            <i class="fa-solid fa-cart-shopping me-1"></i> Giỏ hàng
                            @if (gioHangCount > 0)
                            {
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                    @gioHangCount
                                    <span class="visually-hidden">items in cart</span>
                                </span>
                            }
                        </a>
                    </li>
                    <li class="nav-item">
                        <span class="nav-link text-dark">
                            <i class="fa-solid fa-user me-1"></i> Xin chào, @userName
                        </span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" asp-controller="Account" asp-action="Logout">
                            <i class="fa-solid fa-right-from-bracket me-1"></i> Đăng xuất
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>
