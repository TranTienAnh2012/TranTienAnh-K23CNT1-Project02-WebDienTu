@model IEnumerable<WebDienTu.Models.SanPham>

@{
    var index = 0;          // Đếm sản phẩm
    var colPerRow = 5;      // Số cột mỗi hàng (bootstrap row-cols-lg-5)
}

<link href="~/css/_SanPhamList.css" rel="stylesheet" />
@if (Model == null || !Model.Any())
{
    <div class="col-12">
        <div class="alert alert-warning text-center my-4">
            <i class="fa-solid fa-circle-exclamation me-2"></i>
            Không có sản phẩm phù hợp.
        </div>
    </div>
}
else
{
    <!-- Danh sách sản phẩm -->
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5 g-4">
        @foreach (var item in Model)
        {
            // Delay tính theo hàng, mỗi hàng +200ms
            var delay = (index / colPerRow) * 200;

            <div class="col" data-aos="fade-up" data-aos-delay="@delay">
                <div class="card h-100 shadow-sm border-0 rounded-3 position-relative">

                    <!-- Badge giảm giá -->
                    @if (item.GiaBan.HasValue && item.GiaBan.Value < item.Gia)
                    {
                        <span class="position-absolute top-0 start-0 bg-danger text-white px-2 py-1 rounded-bottom small">
                            <i class="fa-solid fa-tag me-1"></i>
                            Giảm @((1 - item.GiaBan.Value / item.Gia) * 100).ToString("0")%
                        </span>
                    }

                    <!-- Ảnh sản phẩm -->
                    <div class="position-relative">
                        <img src="@item.HinhAnh" class="card-img-top" alt="@item.TenSanPham"
                             style="height:200px; object-fit:cover; border-radius: .5rem .5rem 0 0;" />

                        <!-- Overlay nút hành động -->
                        <div class="card-overlay d-flex justify-content-center align-items-center">
                            <a asp-controller="Home" asp-action="Details" asp-route-id="@item.MaSanPham"
                               class="btn-action btn-view mx-1">
                                <i class="fa-solid fa-eye me-1"></i> Xem
                            </a>
                            <a asp-controller="DonHang" asp-action="ThanhToan" asp-route-id="@item.MaSanPham"
                               class="btn-action btn-buy mx-1">
                                <i class="fa-solid fa-cart-shopping me-1"></i> Mua
                            </a>
                            <form asp-controller="GioHang" asp-action="AddToCart" method="post" class="d-inline mx-1">
                                <input type="hidden" name="sanPhamId" value="@item.MaSanPham" />
                                <input type="hidden" name="quantity" value="1" />
                                <button type="submit" class="btn-action btn-cart">
                                    <i class="fa-solid fa-cart-plus"></i>
                                </button>
                            </form>
                        </div>
                    </div>

					@* nút này ko làm vì ko có ý tương về nó
                        <button class="btn btn-sm btn-outline-danger mx-1" title="Yêu thích">
                                <i class="fa-solid fa-heart"></i>
                            </button> *@

                    <!-- Thông tin -->
                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title text-truncate" title="@item.TenSanPham">@item.TenSanPham</h6>
                        <p class="card-text text-muted small text-truncate" title="@item.MoTa">@item.MoTa</p>

                        <!-- Giá + hành động -->
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="fw-bold text-primary">
                                    @((item.GiaBan ?? item.Gia).ToString("N0")) VNĐ
                                </span>
                            </div>

                            <!-- Hiển thị sao -->
                            @{
                                var danhGiaList = item.DanhGia?.Cast<WebDienTu.Models.DanhGia>().ToList();
                            }
                            @if (danhGiaList != null && danhGiaList.Any())
                            {
                                <div class="mb-2 ms-0">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= Math.Round(danhGiaList.Average(d => d.SoSao ?? 0)))
                                        {
                                            <i class="fa-solid fa-star text-warning me-1"></i>
                                        }
                                        else
                                        {
                                            <i class="fa-regular fa-star text-warning me-1"></i>
                                        }
                                    }
                                    <small class="text-muted">(@danhGiaList.Count())</small>
                                </div>
                            }
                            else
                            {
                                <div class="mb-2 text-muted small ms-1">
                                    Chưa có đánh giá
                                </div>
                            }

                            @* <!-- Các nút Xem / Mua các nút mặc đinh -->
                            <div class="card-actions d-flex justify-content-between">
                                <a asp-controller="Home" asp-action="Details" asp-route-id="@item.MaSanPham"
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="fa-solid fa-eye me-1"></i> Xem
                                </a>
                                <a asp-controller="DonHang" asp-action="ThanhToan" asp-route-id="@item.MaSanPham"
                                   class="btn btn-sm btn-outline-success">
                                    <i class="fa-solid fa-cart-shopping me-1"></i> Mua
                                </a>
                            </div> *@

                        </div>
                    </div>

                    @* <!-- Footer với icon Mua các nút mặc đinh -->
                    <!-- Footer với icon -->
                    <div class="card-footer d-flex justify-content-around border-0 bg-white card-actions">
                        <form asp-controller="GioHang" asp-action="AddToCart" method="post" class="d-inline">
                            <input type="hidden" name="sanPhamId" value="@item.MaSanPham" />
                            <input type="hidden" name="quantity" value="1" />
                            <button type="submit" class="btn btn-sm btn-outline-success" title="Thêm vào giỏ">
                                <i class="fa-solid fa-cart-plus"></i>
                            </button>
                        </form>
                        <button class="btn btn-sm btn-outline-danger" title="Yêu thích">
                            <i class="fa-solid fa-heart"></i>
                        </button>
                    </div> *@


                </div>
            </div>
            index++;
        }
    </div>
}
