@model WebDienTu.Models.SanPham

@{
    ViewData["Title"] = "Xác nhận mua hàng";
}

<h2 class="mb-4">Xác nhận mua hàng</h2>

<div class="card mb-4 shadow-sm" style="max-width: 600px;">
    <img src="@Model.HinhAnh" class="card-img-top" alt="@Model.TenSanPham" style="height:300px; object-fit:cover;" />
    <div class="card-body">
        <h5 class="card-title">@Model.TenSanPham</h5>
        <p class="card-text">@Model.MoTa</p>
        <p class="fw-bold text-primary">Giá: @(Model.GiaBan ?? Model.Gia).ToString("N0") VNĐ</p>

        <form asp-action="MuaHang" method="post">
            <input type="hidden" name="sanPhamId" value="@Model.MaSanPham" />

            <div class="mb-3">
                <label for="soLuong" class="form-label">Số lượng:</label>
                <input type="number" name="soLuong" id="soLuong" class="form-control" value="1" min="1" max="@Model.SoLuongTon" />
            </div>

            <button type="submit" class="btn btn-success">
                <i class="fa-solid fa-cart-plus me-1"></i> Xác nhận mua hàng
            </button>
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary ms-2">Hủy</a>
        </form>
    </div>
</div>
