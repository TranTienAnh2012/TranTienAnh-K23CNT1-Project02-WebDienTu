@model IEnumerable<WebDienTu.Models.GiaTriThuocTinh>

@{
    ViewData["Title"] = "Quản lý Giá Trị Thuộc Tính";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-tags me-2"></i> Quản lý Giá Trị Thuộc Tính</h5>
            <a asp-action="Create" asp-controller="SanPhamThuocTinhs" class="btn btn-light btn-sm">
                <i class="fas fa-plus-circle me-1"></i> Thêm mới
            </a>
        </div>
        <div class="card-body">
            <table class="table table-striped align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width:40%">Sản phẩm</th>
                        <th style="width:50%">Thuộc tính & Giá trị</th>
                        <th class="text-center" style="width:10%">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var spGroup in Model.GroupBy(x => x.MaSanPhamNavigation?.TenSanPham))
                    {
                        // Thay thế tất cả ký tự không phải chữ, số hoặc dấu "-" bằng "-"
                        var collapseId = "collapse-" + System.Text.RegularExpressions.Regex.Replace(spGroup.Key ?? "san-pham", @"[^a-zA-Z0-9\-]", "-");

                        <tr class="table-primary">
                            <td>@spGroup.Key</td>
                            <td>
                                <button class="btn btn-sm btn-link" data-bs-toggle="collapse" data-bs-target="#@collapseId">
                                    Xem thuộc tính
                                </button>
                            </td>
                            <td class="text-center">
                                <a asp-action="Create" asp-route-sanPham="@spGroup.First().MaSanPhamNavigation?.MaSanPham" class="btn btn-sm btn-success">
                                    <i class="fas fa-plus-circle"></i>
                                </a>
                            </td>
                        </tr>

                        <tr class="collapse" id="@collapseId">
                            <td colspan="3">
                                <table class="table table-sm table-borderless mb-0">
                                    <thead>
                                        <tr>
                                            <th style="width:40%">Thuộc tính</th>
                                            <th style="width:40%">Giá trị</th>
                                            <th class="text-center" style="width:20%">Hành động</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var attr in spGroup)
                                        {
                                            <tr>
                                                <td>@attr.ThuocTinh?.TenThuocTinh</td>
                                                <td>@attr.GiaTri</td>
                                                <td class="text-center">
                                                    <a asp-action="Edit" asp-route-id="@attr.GiaTriId" class="btn btn-sm btn-warning me-1">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Details" asp-route-id="@attr.GiaTriId" class="btn btn-sm btn-info me-1 text-white">
                                                        <i class="fas fa-info-circle"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@attr.GiaTriId" class="btn btn-sm btn-danger"
                                                       onclick="return confirm('Bạn có chắc chắn muốn xóa giá trị thuộc tính này?');">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
